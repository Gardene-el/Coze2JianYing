        # 构造 request 对象参数列表
        params = []
        if args.input.in_duration is not None:
            param_str = f'in_duration={json.dumps(args.input.in_duration)}'
            params.append(param_str)
        if args.input.out_duration is not None:
            param_str = f'out_duration={json.dumps(args.input.out_duration)}'
            params.append(param_str)

        # 生成 request 构造代码
        params_str = ', '.join(params)

# 构造 request 对象
req_{generated_uuid} = AddFadeRequest({params_str})

resp_{generated_uuid} = await add_audio_fade(segment_{args.input.segment_id}, req_{generated_uuid})
